@charset "utf-8";
.req {overflow:hidden; display:inline-block; width:4px; height:4px; margin:-16px 0 0 5px; font-size:0px; line-height:0; text-indent:-9999px; vertical-align:middle; border-radius:4px; background-color:#ee0700;}
.tab-list-full.round > li a {font-weight:500; line-height:1.18; letter-spacing:-0.17px;}

/* 아이디찾기 */
.find-wrap {width:681px; margin:0 auto; padding:30px 0;}
.find-wrap .req-info {margin:0; color:#717171; text-align:right; font-size:15px; line-height:1.33; letter-spacing:-0.15px;}
.find-wrap .board-form {margin-top:9px; border:0;}
.find-wrap .board-form table tbody tr th {padding:0; border:0; line-height:1.25; letter-spacing:-0.16px; font-weight:500;}
.find-wrap .board-form table tbody tr td {padding:10px 0; border:0;}
.find-wrap .button-group {margin-top:10px; text-align:right;}
.find-wrap .button-group .button {width:550px;}

/* 비밀번호 찾기 */
.board-form table tbody tr td.col {display:flex; flex-wrap:nowrap;}
.board-form table tbody tr td.col .button {flex-shrink:0; margin-left:10px}
.wrap-limit {position:relative; width:100%; vertical-align: middle;}
.wrap-limit > .input-text {padding-right:94px;}
.wrap-limit > .time-limit {position:absolute; right:0; top:0; width:74px; height:100%; margin:0; font-family:'Roboto', sans-serif; font-size:14px; line-height:51px;}
.box-bg-gray {padding:22px 30px 19px; border-radius:12px; background-color:#f7f9fa;}
.find-wrap > .box-bg-gray {margin-top:50px;}
.find-wrap > .box-bg-gray > .list-dot li {margin-top:9px; color:#717171; font-size:15px; line-height:1.73;}
.find-wrap > .box-bg-gray > .list-dot li:first-child {margin-top:0;}
.find-wrap > .box-bg-gray > .list-dot li:before {top:11px;}