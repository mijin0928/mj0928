@charset "utf-8";

/* 이용약관 */
.terms strong {display:block; margin-bottom:25px; font-size:24px; line-height:0.58; letter-spacing:-0.36px; color:#3a3a4a;}
.terms strong ~ strong {margin-top:40px;}
.terms .tit {margin-bottom:9px; font-size:18px; font-weight:bold; line-height:1.56; letter-spacing:-0.27px; color:#3a3a4a;}
.terms .tit ~ .tit {margin-top:40px;}
.terms .txt {margin:0; line-height:1.75; letter-spacing:-0.24px;}
.terms .list {margin:0; padding:0; list-style:none;}
.terms .list:first-of-type {margin:20px 0 0; padding:0 0 0 15px; list-style:decimal;}
.terms .list:first-of-type > li > ol {margin:0; padding:0; list-style:none;}

/* 약관동의 */
.step {position:relative; display:flex; justify-content:space-between; width:612px; margin:0 auto; text-align:center;}
.step::before {content:''; display:block; position:absolute; left:calc(50% - 294px); top:27px; z-index:-1; width:568px; height:2px; background-color:#bec2c8;}
.step .num {display:inline-block; width:56px; height:56px; line-height:57px;border-radius:24px; font-size:24px; font-weight:bold; font-family:Roboto; color:#fff; text-align:center; background-color:#44465b;}
.step .tit {margin:15px 0 0; font-size:22px; font-weight:500; color:#3a3a4a; line-height:0.86; letter-spacing:-0.22px;}

