@charset "utf-8";

span.bg-txt {box-shadow:inset 0 -13px #f8ef63;}

.login-wrap {height:581px; padding:40px 220px 49px; border:1px solid #e1e3e6; border-radius:24px;}
.login-wrap p.tit {margin:0; font-size:24px; font-weight:700; line-height:1.33;}
.login-wrap p.tit + .txt-page {margin:20px 0 0 0; font-size:18px; line-height:normal;}
.login-wrap .block {display:flex; justify-content:space-between; width:840px; padding:29px 0 21px 0;}
.login-wrap .txt-area {width:330px; height:492px; margin:21px 0 0 0; position:relative; background:url('../images/contents/img-login.png') no-repeat; background-size:271px 220px; background-position:top 198px right;}
.login-wrap .txt-area p.tit, .login-wrap .txt-area p.txt-page {padding-left:40px;}
.login-wrap .txt-area .line {position:absolute; width:1px; height:492px; background-image:linear-gradient(to top, rgba(237,237,237,0), #ddd, #ededed, rgba(237,237,237,0)); top:-21px; right:0;}
.login-wrap .login-area {width:400px;}
.login-wrap .login-area .button {width:100%;}
.login-wrap .login-area .input-wrap input + input,
.login-wrap .login-area .input-wrap input + button {margin-top:20px;}
.login-wrap .login-area .input-wrap .alert-wrap {display:flex; margin:12px 0 18px 0;}
.login-wrap .login-area .input-wrap p.txt {margin:0; color:#f6312b; word-break:keep-all;}
.login-wrap .login-area .input-wrap .ico-alert {flex-shrink:0; margin:5px 5px 0;}
.login-wrap .login-area .user-menu, .login .login-area .user-menu li {padding:0; list-style:none;}
.login-wrap .login-area .user-menu {display:flex; justify-content:space-between; margin:20px 0 0 0; padding:0 12px;}
.login-wrap .login-area .user-menu li {position:relative;}
.login-wrap .login-area .user-menu li::after {content:''; position:absolute; display:block; width:1px; height:14px; background:#e1e3e6; top:8px; right:-15px;}
.login-wrap .login-area .user-menu li:last-child::after {background:none;}
.login-wrap .login-area .list-dot {position:absolute; max-width:400px; padding:20px 55px 20px 30px; bottom:80px; background:#f7f9fa; border-radius:12px;}
.login-wrap .login-area .list-dot li {line-height:1.63;}

.join-fin-wrap {padding:70px 0; border:1px solid #e1e3e6; border-radius:24px; text-align:center;}
.join-fin-wrap .ico-block {width:160px; margin:0 auto;}
.join-fin-wrap .ico-block .ico-join {width:160px; height:160px; margin:0 auto; border-radius:100%; background-color:#f4f5f7; background-size:92px; background-position:center;}
.join-fin-wrap p.tit-fin {font-size:24px; font-weight:500; margin:20px 0 0 0; line-height:1.5;}
.join-fin-wrap p.txt {margin:14px 0 0 0;}
.join-fin-wrap a.button {padding:0 36px; height:56px; font-size:18px;}
