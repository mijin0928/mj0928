.board-form .wrap {margin-top:24px;}
.board-form .wrap + .wrap {margin-top:40px;}
.board-form .wrap .tit {margin:0 0 16px; font-weight:500; line-height:1.18; color:#3a3a4a;}
.line {display:block; width:100%; height:1px; background-color:#e2e3e7; margin-top:48px;}

/* 온라인 설문조사 상세(종료) */
.box-survey-result {padding:24px 20px; border:1px solid #e2e3e7; border-radius:12px; background-color:#fff6f2;}
.box-survey-result .list-dot li + li {margin-top:9px;}
.button.navy.open-modal {width:100%; margin-top:16px;}

/* layer-modal */
.box-survey-result.v1 {margin:20px 0 40px 0;}
.box-survey-result-list {display:block; margin:20px 0 0 0; padding:0 30px;}
.box-survey-result-list p {margin:0; padding:0;}
.box-survey-result-list .list {list-style-type:none; margin:0; padding:0;}
.box-survey-result.v1 .box-survey-result-list .list > li + li {padding:24px 0; border-bottom:1px solid #e1e3e6;}
.box-survey-result.v1 .box-survey-result-list .list > li:last-child {border:0;}
.box-survey-result.v1 .box-survey-result-list .list li .tit {margin:0 0 24px;}

.box-survey-result-list .survey-graph dl {margin:0;}
.box-survey-result-list .survey-graph dt {position:relative; line-height:1.65; font-weight:500;}
.box-survey-result-list .survey-graph dt > p {border-right:1px solid #000; display:inline-block;}
