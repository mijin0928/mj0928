@charset "utf-8";
/* 자주하는 질문 */
.faq-list {list-style-type:none; padding:0; margin:0; border-top:2px solid #44465b;}
.faq-list > li {margin:0; padding:0; border-bottom:1px solid #e2e3e7;}
.faq-list > li .tit-area .tit {display:block; position:relative; width:100%; margin:0; padding:24px 44px 24px 36px; border:0; line-height:1.5; color:#3a3a4a; font-weight:500; text-align:left; background-color:#fff;}
.faq-list > li .tit-area .tit .ico-faq-q {position:absolute; left:0; top:27px;}
.faq-list > li .tit-area .tit .ico-toggle-arr {position:absolute; right:0; top:24px;}
.faq-list > li .cont-area {display:none; position:relative; padding:52px 20px 29px; line-height:1.5; border-top:1px solid #e2e3e7; background-color:#fff6f2;}
.faq-list > li .cont-area .ico-faq-a {position:absolute; left:20px; top:20px;}


/* 온라인 설문조사 목록 */
.list-survey p {margin:0; padding:0;}
.list-survey ul {list-style-type:none; margin:0; padding:0;}
.list-survey ul li {margin:16px 0 0; padding:0;}
.list-survey ul li:first-child {margin-top:0;}
.list-survey ul li .box {display:block; position:relative; padding:20px 20px 110px; border-radius:12px;}
.list-survey ul li .box .img {position:absolute; right:20px; bottom:20px; width:80px; height:80px; font-size:0; line-height:0;}
.list-survey ul li .box .img img {width:100%;}
.list-survey ul li .box .tit {overflow:hidden; font-size:20px; color:#3a3a4a; font-weight:500; line-height:1.3; text-overflow:ellipsis; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical;}
.list-survey ul li .box .period {margin-top:10px; font-size:15px; line-height:1.2; letter-spacing:0; font-family:'Roboto', sans-serif;}
.list-survey ul li .box .count {position:absolute; left:20px; bottom:76px; margin:0; font-size:15px; line-height:1.2; letter-spacing:0; font-family:'Roboto', sans-serif;}
.list-survey ul li .box .count .iconset {margin-right:8px;}
.list-survey ul li:nth-child(3n) .box {background-color:#f4f5f7;}
.list-survey ul li:nth-child(3n - 1) .box {background-color:#e5fbf2;}
.list-survey ul li:nth-child(3n - 2) .box {background-color:#ffeae0;}


@media (max-width: 359px) {
	.list-survey ul li .box .img {width:72px; height:72px;}
}

/* 회원가입 완료 */
.join-fin-wrap {position:relative; padding:220px 20px 48px; border:1px solid #e1e3e6; border-radius:12px; text-align:center; word-break:keep-all;}
.join-fin-wrap p {margin:0;}
.join-fin-wrap .iconset {position:absolute; left:50%; top:40px; width:160px; height:160px; margin-left:-80px; background-color:#f4f5f7; border-radius:50%; background-size:92px auto; background-position:center;}
.join-fin-wrap .tit {margin-bottom:21px; color:#3a3a4a; font-size:22px; font-weight:500; line-height:1.3;}
.join-fin-wrap .txt {margin-bottom:10px;}
.join-fin-wrap .txt-help {display:inline; font-size:17px; line-height:1.5;}