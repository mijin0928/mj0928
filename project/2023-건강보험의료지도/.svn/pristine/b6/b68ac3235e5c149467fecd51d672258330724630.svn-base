@charset "utf-8";
/* 오픈 API */
.box-search {height:88px; margin-bottom:40px; padding:20px; text-align:center; border-radius:12px; background-color:#f4f5f7;}
.box-search > .input-text {width:500px;}
.button-sort {position:relative; padding:0 12px 0 0; margin-right:8px; color:#555; line-height:1.25; background-color:#fff;}
.button-sort:last-child {margin-right:0; padding:0;}
.button-sort:after {content:''; position:absolute; right:0; top:3px; width:1px; height:14px; background-color:#bec2c8;}
.button-sort:last-child:after {display:none;}
.button-sort.on {padding-left:21px}
.button-sort.on:before {content:''; position:absolute; left:0; top:2px; width:16px; height:16px; background:url('../images/contents/bg-sort-check.png') no-repeat center;}
.box-search + .board-util {margin-bottom:32px;}
.list-api, .list-api > li {list-style-type:none; margin:0; padding:0;}
.list-api > li + li {margin-top:40px;}
.list-api > li p {margin:0;}
.list-api > li > a {display:block; min-height:178px; padding:30px 40px; text-align:left; border:1px solid #e2e3e7; border-radius:24px; transition:box-shadow 0.2s;}
.list-api > li > a:hover {text-decoration:none; background-color:#fff6f2; border-color:#bec2c8; box-shadow:0 8px 24px 0 rgba(0,0,0,0.08);}
.list-api > li .tit {color:#3a3a4a; font-size:22px; font-weight:700; line-height:1.36; letter-spacing:-0.22px;}
.list-api > li > a:hover .tit {text-decoration:underline;}
.list-api > li .txt {line-height:1.25; letter-spacing:-0.16px;}
.list-api > li > a > .txt {margin:10px 0 20px;}
.list-api > li .data {display:flex; justify-content:space-between;}
.list-api > li .data > .wrap-txt {width:calc(100% - 286px); flex-shrink:0;}
.list-api > li .data > .wrap-txt .txt {display:inline-block; position:relative; padding-left:12px; margin-left:8px; vertical-align: middle;}
.list-api > li .data > .wrap-txt .txt:after {content:''; position:absolute; left:0; top:5.5px; width:1px; height:14px; background-color:#bec2c8;}
.list-api > li .data > .wrap-txt .txt:first-child {margin:0; padding:0;}
.list-api > li .data > .wrap-txt .txt:first-child:after {display:none;}
.list-api > li .data > .tagset-group .tagset {padding:0 16px; margin-right:8px;}
.list-api > li .data > .tagset-group .tagset:last-child {margin-right:0;}
.tagset.purple {color:#fff; background-color:#6d62f5;}
.tagset.green {color:#fff; background-color:#038674;}
.tagset.blue {color:#fff; background-color:#0273ec;}