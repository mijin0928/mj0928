@charset "utf-8";

/* 이용약관 */
.terms .tit-01 {margin:0 0 25px; font-size:24px; font-weight:bold; color:#3a3a4a;}
.terms .tit-01 ~ .tit-01 {margin-top:40px;}
.terms .tit-01 + .tit-02 {margin:0;}
.terms .tit-02 {margin:40px 0 9px; font-size:18px; font-weight:bold; line-height:1.56; color:#3a3a4a;}
.terms .txt {margin:0; line-height:1.75;}
.terms ol {margin:5px 0 0; padding:0; list-style:none;}
.terms ol > li > ol {margin-bottom:5px; padding-left:37px; list-style:decimal;}
.terms .list-desc {padding-left:20px; list-style:decimal;}

/* 약관동의 */
.step {position:relative; width:612px; margin:0 auto 40px; text-align:center;}
.step::before {content:''; display:block; position:absolute; left:20px; top:27px; right:50px; z-index:-1; height:2px; background-color:#bec2c8;}
.step > .wrap {display:flex; align-items:center; justify-content:space-between;}
.step .num {display:inline-block; width:56px; height:56px; line-height:57px; border-radius:24px; font-size:24px; font-weight:bold; font-family:Roboto; color:#fff; text-align:center; background-color:#44465b;}
.step .active .num {width:56px; height:56px; border-radius:24px; text-indent:-9999px; background:url('../images/common/ico/ico-check.png') no-repeat center; background-size:32px; background-color:#3bc897;}
.step .tit {margin:15px 0 0; font-size:22px; font-weight:500; color:#3a3a4a;}

.terms-agree {border:solid 1px #e2e3e7; border-radius:12px;}
.terms-agree + .terms-agree {margin-top:40px;}
.terms-agree > .tit {margin:0; padding:23px 0 22px 40px; font-size:18px; font-weight:500; line-height:1.11; color:#3a3a4a; background-color: #f4f5f7;}
.terms-agree > .tit strong {color:#f6312b; font-weight:500;}

.terms-agree .cont {overflow:auto; height:245px; padding:40px 40px 0; font-size:15px; font-weight:400; border-top:solid 1px #e2e3e7; border-bottom:solid 1px #e2e3e7;}
.terms-agree .cont::after {content:''; display:block; padding-bottom:40px;}
.terms-agree .cont ol {margin:10px 0 0; padding:0; list-style:none;}
.terms-agree .cont ol > li > ol {margin-bottom:10px; padding-left:40px; list-style:decimal;}
.terms-agree .cont ol > li > ol > li > ol {padding-left:0; list-style:none;}
.terms-agree .cont ol > li > ol > li > ol > li > ol {padding-left:20px;}
.terms-agree .cont ol > li > ul {margin:0 0 10px; padding:0; list-style:none;}
.terms-agree .cont .list-desc {padding-left:20px; list-style:decimal;}
.terms-agree .cont .tit-01 {margin:0; font-size:18px; font-weight:700; line-height:1.73; color:#3a3a4a;}
.terms-agree .cont .tit-02 {margin:14px 0 0; color:#3a3a4a; font-weight:500;}
.terms-agree .cont .txt-01 {margin:14px 0 0;}
.terms-agree .cont .txt-02 {margin:0;}

.terms-agree .cont .list {margin:14px 0 0; padding:0; list-style:none;}
.terms-agree .cont .list > li > ol {margin-top:14px;}
.terms-agree .cont .list > li > .list {padding-left:15px;}
.terms-agree .box-radio {padding:21px 40px 21px; text-align:right;}

.all-check {margin-top:20px; text-align:right;}





