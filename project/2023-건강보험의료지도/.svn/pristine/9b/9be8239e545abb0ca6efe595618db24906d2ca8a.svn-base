@charset "utf-8";

/* ==========================================================================
	
	main css
	
========================================================================== */
.bg-main {position:relative; padding-top:70px;}
.bg-main::before {content:''; display:block; position:absolute; left:0; top:0;z-index:-1; width:100%; height:690px; background-color:#ffeae0;}
.bg-main .inner-wrap::before {content:''; display:block; clear:both;}
.bg-main .txt-page {margin:0 0 8px; font-size:24px; color:#3a3a4a; line-height:1.38;}
.bg-main .main-title {margin:0 0 60px; font-size:38px; line-height:1.18; color:#3a3a4a;}

.main-slick {overflow:hidden; float:left; position:relative; width:400px; height:590px; border-radius:48px 92px; background-image:linear-gradient(149deg, #04a887 7%, #1bc99f 97%);}
.main-slick .wrap .slick-slide {position:relative; height:590px;}
.main-slick .wrap .slide p {margin:0; padding:0 50px; color:#fff;}
.main-slick .wrap .slide .tit {margin-bottom:15px; padding-top:40px; font-size:30px; font-weight:700; line-height:1.37;}
.main-slick .wrap .slide .txt {font-size:19px; line-height:1.42;}
.main-slick .wrap .slick-dots {overflow:hidden; list-style:none; margin:0; position:absolute; left:10px; top:266px;}
.main-slick .wrap .slick-dots li {float:left;}
.main-slick .wrap .slick-dots li ~ li {margin-left:12px;}
.main-slick .wrap .slick-dots li button {overflow:hidden; width:12px; height:12px; padding:0; border-radius:12px; text-indent:-9999px; border:2px solid #fff; background-color:transparent;}
.main-slick .wrap .slick-dots button:focus {outline:2px solid red;}
.main-slick .wrap .slick-dots .slick-active button {background-color:#fff;}
.main-slick .wrap .img {position:absolute; left:50%; bottom:0; transform:translateX(-50%);}
.main-slick .wrap .img img {border-radius:0 0 48px 92px;}

.main-slick .control {position:absolute; left:130px; top:274px;}
.main-slick .control button {overflow:hidden; position:absolute; left:0; top:0; width:16px; height:16px; text-indent:-9999px;}
.main-slick .control button:focus {outline:2px solid red;}
.main-slick .control button.hide {display:none;}
.main-slick .control .pause {background:url('../images/main/btn-pause.png') no-repeat;}
.main-slick .control .play {background:url('../images/main/btn-play.png') no-repeat;}

.box-main {display:flex; flex-wrap:wrap; width:880px;}
.box-main .box {position:relative; width:400px; height:275px; margin-left:40px; border:1px solid #e2e3e7; border-radius:24px 48px 24px 24px; background-color:#fff;}
.box-main .box:hover {box-shadow:12px 24px 24px 0 rgba(0, 0, 0, 0.06); transition:box-shadow 0.2s;}
.box-main .box:nth-child(2n) ~ .box {margin-top:40px;}
.box-main .box a {display:block; height:100%; padding:40px 50px; text-decoration:none;}
.box-main .box p {margin:0; padding:0;}
.box-main .box .txt {font-size:16px; line-height:1.5;}
.box-main .box .tit {margin-top:10px; font-size:24px; font-weight:700; line-height:1.17; color:#3a3a4a;}
.box-main .box::before {content:''; display:block; position:absolute; left:50px; bottom:76px; width:50px; height:13px; background:url('../images/main/ico-arrow-01.png') no-repeat;}
.box-main .box::after {content:''; display:block; position:absolute; bottom:40px; right:50px; width:80px; height:80px;}
.box-main .box:nth-child(1):after {background:url('../images/main/ico-main-01.png') no-repeat;}
.box-main .box:nth-child(2):after {background:url('../images/main/ico-main-02.png') no-repeat;}
.box-main .box:nth-child(3):after {background:url('../images/main/ico-main-03.png') no-repeat;}
.box-main .box:nth-child(4):after {background:url('../images/main/ico-main-04.png') no-repeat;}

.main-title-2 {margin:68px 0 20px; font-size:24px; line-height:1.17; color:#3a3a4a;}
.main-title-2 ~ .main-title-2 {margin-top:76px;}

.list-main {position:relative;}
.list-main ul {display:flex; justify-content:space-between; list-style-type:none; margin:0; padding:0;}
.list-main li {width:400px; border-radius:24px; border:1px solid transparent; background-color:#f4f5f7;}
.list-main li:hover {box-shadow:0 8px 24px 0 rgba(0, 0, 0, 0.08); border:1px solid #bec2c8; transition:box-shadow 0.2s;}
.list-main li a {display:block; padding:40px; text-decoration:none;}
.list-main li p {margin:0; padding:0;}
.list-main li .tit {overflow:hidden; line-height:1.12; font-weight:700; color:#3a3a4a; text-overflow:ellipsis; white-space:nowrap;}
.list-main li .txt {overflow:hidden; display:-webkit-box; -webkit-line-clamp:3; -webkit-box-orient:vertical; margin:20px 0; font-size:16px; line-height:1.75;}
.list-main li .date {text-align:right; color:#717171;}
.list-main .btn-more {overflow:hidden; display:block; position:absolute; top:-60px; right:0; width:32px; height:32px; text-indent: -9999px; background:url('../images/main/btn-more.png') no-repeat;}

.list-main.notice ul .fixed {position:relative; background-color:#ffffeb;}
.list-main.notice ul .fixed .tit {height:24px; padding-left:34px; line-height:24px; background:url('../images/main/ico-fixed.png') no-repeat;}

.list-main.qna li {position:relative;}
.list-main.qna li .iconset {position:absolute; left:40px; top:38px; width:24px; height:24px;}
.list-main.qna li .iconset.ico-faq-a {top:82px;}
.list-main.qna li p {padding-left:34px;}
.list-main.qna li .txt {margin-bottom:0;}

.link-main {margin-top:80px;}
.link-main::before {content:''; display:block; clear:both;}
.link-main .box {position:relative; float:left; width:620px; border-radius:12px; background-color:#f4f5f7;}
.link-main .box ~ .box {margin-left:40px;}
.link-main .box a {display:flex; justify-content:space-between; padding:34px 40px;}
.link-main .box p {margin:0; padding:0;}
.link-main .box .tit {padding-left:42px; font-size:18px; font-weight:700; line-height:1.39; color:#3a3a4a;}
.link-main .box .iconset {position:absolute; left:40px; top:32px; width:32px; height:32px;}
.link-main .box .iconset.ico-graph {background:url('../images/main/ico-graph.png') no-repeat;}
.link-main .box .iconset.ico-write {background:url('../images/main/ico-write.png') no-repeat;}
.link-main .box .txt {padding-right:32px; font-size:16px; line-height:1.38;}
.link-main .box .txt::after {content:''; display:block; position:absolute; top:30px; right:40px; width:32px; height:32px; background:url('../images/main/ico-arrow-02.png') no-repeat;}
