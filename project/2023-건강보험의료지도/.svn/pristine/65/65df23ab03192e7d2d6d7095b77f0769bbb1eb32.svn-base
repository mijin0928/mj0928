@charset "utf-8";

/* 이용가이드
========================================================================== */
/* 지표 이용 가이드 - 목록 */
.indicator-guide-list {list-style-type:none; margin:-40px 0 0 0; padding:0;}
.indicator-guide-list:after {content:''; display:block;}
.indicator-guide-list > li {position:relative; width:100%; height:140px; padding:20px; margin:40px 0 0 0; border:1px solid rgba(255,255,255,0); background-color:#f4f5f7; border-radius:24px; transition:0.2s;}
.indicator-guide-list > li:hover {border:1px solid #bec2c8;  box-shadow: 0 8px 24px 0 rgba(0, 0, 0, 0.08);}
.indicator-guide-list > li .tit {margin:0; padding:0; color:#3a3a4a; font-size:20px; font-weight:500; line-height:1.36;}
.indicator-guide-list > li .button {margin-top:40px;}
.indicator-guide-list > li .iconset {position:absolute; top:50px; right:20px;}

/* common */
.layer-modal > .wrap .cont {padding:40px; text-align:center;}

.tab-list-full {display:flex; flex-wrap:wrap; width:100%; list-style-type:none; margin:-1px 0 0 0; padding:0;}
.tab-list-full li {background-color:#f4f5f7;}
.tab-list-full > li a {margin:0; padding:0; transition:0.2s;}
.tab-list-full > li > a,
.tab-list-full > li > button {display:flex; flex-wrap:wrap; justify-content:center; align-items:center; width:100%; height:56px; padding:0 10px; border:1px solid #e1e3e6; font-size:17px; color:#555; text-align:center; text-decoration:none; line-height:1.3; background-color:transparent;}
.tab-list-full > li:hover > a,
.tab-list-full > li:hover > button,
.tab-list-full > li.on > a,
.tab-list-full > li.on > button {color:#fff; font-weight:500; background-color:#44465b; border-color:#44465b;}
.tab-list-full > li.on > a:focus,
.tab-list-full > li.on > button:focus {outline-color:#f6312b;}