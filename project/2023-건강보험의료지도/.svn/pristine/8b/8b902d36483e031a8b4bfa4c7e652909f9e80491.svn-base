@charset "utf-8";

/* ==========================================================================
guide style
========================================================================== */
html,body {height:100%;}

.guide-wrap {overflow:hidden; position:relative; width:100%; height:100%; margin:0; padding:0 0 0 180px;}

/* header */
#headerGuide {overflow-y:auto; position:absolute; left:0; top:0; display:block !important; width:180px; min-width:180px; height:100%; margin:0; padding:0; background-color:#4b4b4b; box-shadow:4px 0px 10px 0px rgba(45, 45, 45, 0.5);}
#headerGuide h1 {display:block; padding:0; font-size:14px; font-weight:400; background-color:#222;}
#headerGuide h1 a {display:block; margin:0; padding:10px 0 10px 10px; color:#fff; font-weight:600; font-size:1.1em; text-shadow:2px 2px 0px #000;}
#headerGuide h1 a:hover {color:#fff; text-decoration:none;}

#gnbGuide {margin:0; padding:0;}
#gnbGuide ul {margin:0; padding:0;}
#gnbGuide ul li a {display:block; height:36px; margin:0; padding:0 0 0 10px; color:#fff; font-size:0.8rem; line-height:35px; text-decoration:none; letter-spacing:0;}
#gnbGuide ul li a:hover {color:#fff; background-color:#01738b;}
#gnbGuide ul > li > ul {background-color:#ecf0f4;}

#gnbGuide > ul > li.has > a {position:relative;}
#gnbGuide > ul > li.has > a:before {content:''; display:block; position:absolute; right:6px; top:50%; width:10px; height:2px; margin:-1px 0 0 0; padding:0; background-color:#fff;}
#gnbGuide > ul > li.has > a:after {content:''; display:block; position:absolute; right:10px; top:50%; width:2px; height:10px; margin:-5px 0 0 0; padding:0; background-color:#fff;}
#gnbGuide > ul > li.has > ul {overflow:hidden; height:0;}
#gnbGuide > ul > li.on > a {color:#fff; background-color:#01738b;}
#gnbGuide > ul > li.on > a:after {display:none;}
#gnbGuide > ul > li.has.on > ul {height:auto;}
#gnbGuide > ul > li > ul > li > a {padding:0 0 0 20px; color:#222; font-size:13px;}
#gnbGuide > ul > li > ul > li > a.on {color:#fff; background-color:#329eb1;}


h2.tit-guide {display:block; position:relative; font-size:25px; border-bottom:1px solid #333; padding-bottom:10px;}
h2.tit-guide:first-child {margin-top:0;}
h3.tit-guide {display:block; position:relative; margin:15px 0 10px; padding:0 0 5px 18px; color:#ea002c; font-size:18px;}
h3.tit-guide:before {content:'â–£'; position:absolute; left:0; top:2px; font-size:14px; color:#333;;}
h4.tit-guide {display:block; position:relative; margin:15px 0; padding:0 0 5px 12px;  font-size:16px;}
h4.tit-guide:before {content:''; display:block; position:absolute; left:0; top:12px; width:6px; height:2px; background-color:#000;}




/* container */
#contentsGuide {width:100%; height:100%; margin:0 auto;}
#contentsGuide .iframe {overflow:hidden; overflow-x:scroll; overflow-y:scroll; width:100%; height:100%; border:0;}

/* contents */
.cont-guide {padding:10px 30px 50px;}
.cont-guide:after {content:''; display:block; clear:both; height:0; visibility:hidden;}


.txt-guide {position:relative; margin:0 0 20px 0; padding:0 0 5px 14px;  font-weight:700; font-size:15px; border-bottom:1px solid #333;}
.txt-guide:before {content:''; display:block; position:absolute; left:0; top:14px; width:4px; height:4px;}

.desc-guide {position:relative; margin:0 0 20px 0; padding:25px 20px 20px 20px; font-size:16px; color:#000; border:1px solid #ccc}
.desc-guide:after {content:'guide-description'; display:inline-block; position:absolute; top:-10px; left:10px; margin:0; padding:0 3px; color:#3378c1; letter-spacing:1px; font-size:12px; font-weight:normal; text-shadow:1px 1px 0 #fff; font-family:'Segoe UI', sans-serif; background-color:transparent; }

.tit-guide + .desc-guide {margin-top:10px;}

.copy.bg {padding:15px 0; background-color:#000;}
.copy + .copy {margin-top:10px;}


.black-block {margin:5px 0 0 0; padding:10px; background-color:#000;}

.source {margin:0 0 30px; padding:0 10px 30px; border-bottom:1px dashed #777;}
.source button.source-view-toggle {display:block; width:100%; margin-top:20px; color:#000; border:0; background-color:#ffc400 !important; height:35px; line-height:35px; font-size:13px}
.source button.source-view-toggle:focus {outline:2px solid #000;}
.source xmp {display:none; margin:10px 0 0 0; font-size:13px; padding:0 20px 20px 20px; color:#fff; background-color:#333; line-height:1.5;}
.source.on xmp {display:block;}
.source + .tit-guide {margin-top:0;}
.source .paste {margin-top:20px;}
.source .paste .code {margin-top:10px; display:none;}
.source .paste.on .code {display:block;}
.source .list-top {margin-top:0;}


/* color page */
.color-guide {overflow:hidden;}
.color-guide p {display:block; float:left; width:160px; height:160px; color:#fff; border-radius:160px; line-height:160px; text-align:center;}
.color-guide p + p {margin-left:10px;}

/* source copy */
.title-3 {margin-left:0;}